  "bugs": {
    "url": "https://github.com/maryrosecook/substantiate/issues"
  },
  "homepage": "https://github.com/maryrosecook/substantiate#readme",
  "dependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@types/node": "^16.4.13",
    "@types/react": "^17.0.16",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "esbuild": "^0.12.18",
    "eslint": "^7.32.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
